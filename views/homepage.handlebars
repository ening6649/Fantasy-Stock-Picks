<div class="container">
  <div class="row">
    <div class="col-12">
{{#if loggedIn}}
    <form class="new-post-form">
        <h2>New Post</h2>
        <label for="post-title">Title</label><input type="text" class="form-control bg-dark text-white" id="post-title" name="post-title" />
        <label for="post-text">Post Text</label><textarea class="form-control bg-dark text-white" id="post-text" name="post-text"></textarea>
        <button type="submit" class="btn btn-warning" id="btn-post">Post</button>
    </form>
{{/if}}
    </div>
  </div>
</div>

<ol class="post-list" style="height: 80vh; overflow-y: scroll">
<!-- posts array -->
{{#each posts as |post|}}
  <ul>
      {{> post-info post }} 
    </div>
  </ul>
{{/each}}
</ol>



